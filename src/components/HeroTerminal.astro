---
<section class="h-screen relative flex items-center overflow-hidden bg-dos-bg">
    <!-- Modern Terminal Background (Subtle) -->
    <div class="absolute inset-y-0 left-0 w-full md:w-3/4 lg:w-1/2 overflow-hidden pointer-events-none opacity-5 select-none">
        <div class="p-10 font-sans text-sm md:text-base leading-relaxed">
            <div class="text-white filter blur-[1px] animate-terminal-scroll">
                <ul class="flex flex-col gap-1">
                    {backgroundLogs.map((log) => (
                        <li class="whitespace-nowrap">{log}</li>
                    ))}
                </ul>
            </div>
        </div>
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-dos-bg/80 to-dos-bg"></div>
        <div class="absolute inset-0 bg-gradient-to-b from-dos-bg via-transparent to-dos-bg"></div>
    </div>

    <!-- Hero Content -->
    <div class="container mx-auto px-6 relative z-10 pt-24 md:pt-32">
        <div class="max-w-5xl">
            <div class="inline-block px-5 py-2 border border-dos-green/30 text-dos-green text-xs md:text-sm font-pixel mb-10 tracking-[0.3em] uppercase bg-dos-green/5 shadow-[0_0_15px_rgba(0,255,0,0.1)]">
                Core Systems: Operational // Entropy: Stable
            </div>
            
            <!-- Fun Command Scrolling Terminal -->
            <div class="max-w-3xl h-[380px] overflow-hidden relative border-l border-white/10 pl-10 pt-4 group cursor-text mb-24">
                <div class="text-white/80 font-sans text-xs md:text-sm animate-terminal-scroll italic font-light tracking-tight group-hover:text-dos-green group-hover:[animation-play-state:paused] transition-colors duration-300">
                    <ul class="flex flex-col gap-1.5 pb-20">
                        {commandLogs.map((log) => (
                            <li class="whitespace-nowrap">{log}</li>
                        ))}
                    </ul>
                </div>
                
                <!-- Hover Indication (Terminal Prompt) -->
                <div class="absolute bottom-4 left-10 text-dos-green font-sans text-xs md:text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center bg-dos-bg/95 py-1 pr-8 z-20">
                    <span class="mr-2">phil@garage:~$</span>
                    <span class="w-2 h-4 bg-dos-green animate-pulse"></span>
                </div>

                <div class="absolute inset-0 pointer-events-none bg-gradient-to-b from-dos-bg/40 via-transparent to-dos-bg/80 z-10"></div>
            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 opacity-100 select-none pointer-events-none z-30">
        <span class="text-xs font-pixel uppercase tracking-[0.4em] text-white mb-1">Explore</span>
        <div class="animate-bounce">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </div>
    </div>
</section>

<style>
    /* Animation removed as we use Tailwind's animate-bounce */
</style>